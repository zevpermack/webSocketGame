{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src/", // Set your base directory for imports
    "paths": {
      "@socket/*": ["server/socket/*"], // Define custom import paths (e.g., import "@socket/socketFile")
      "@express/*": ["server/express/*"],
      "@client/*": ["client/*"] // Define custom import paths for Express-related files
    }
  },
  "include": ["src"]
}
